<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    >

  <View
      android:layout_width="match_parent"
      android:layout_height="@dimen/timeline_v2_key_line"
      android:background="#e0e0e0"
      />

  <FrameLayout
      android:id="@+id/fb_item_top"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="8dp"
      android:gravity="center_vertical"
      android:padding="4dp"
      >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/fb_user_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/nam2018"
        app:civ_border_color="@color/colorAccent"
        app:civ_border_width="0.5dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:orientation="vertical"
        android:padding="4dp"
        >
      <TextView
          android:id="@+id/fb_user_name"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="eneim"
          android:textAppearance="@style/TextAppearance.AppCompat.Body2"
          android:textStyle="bold"
          />
      <TextView
          android:id="@+id/fb_user_profile"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="the simple, the bestãƒ»moments ago"
          android:textAppearance="@style/TextAppearance.AppCompat.Small"
          />
    </LinearLayout>
  </FrameLayout>

  <android.support.v7.widget.AppCompatTextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="0dp"
      android:ellipsize="end"
      android:lineSpacingMultiplier="1.15"
      android:maxLines="8"
      android:padding="4dp"
      android:text="@string/large_text"
      android:textAppearance="@style/TextAppearance.AppCompat.Small"
      />

  <View
      android:layout_width="match_parent"
      android:layout_height="0.5dp"
      android:layout_marginEnd="@dimen/timeline_v2_key_line"
      android:layout_marginStart="@dimen/timeline_v2_key_line"
      android:background="#50a0a0a0"
      />

  <LinearLayout
      android:id="@+id/fb_item_bottom"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_vertical"
      android:minHeight="40dp"
      android:orientation="horizontal"
      >
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/fb_button_like"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/fb_button_like"
        style="@style/Facebook.Button.Feed"
        />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/fb_button_comment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/fb_button_comment"
        style="@style/Facebook.Button.Feed"
        />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/fb_button_share"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/fb_button_share"
        style="@style/Facebook.Button.Feed"
        />
  </LinearLayout>
</android.support.v7.widget.LinearLayoutCompat>